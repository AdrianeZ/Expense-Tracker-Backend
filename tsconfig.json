  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "downlevelIteration": true,
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types"]

  },
  "exclude": [
    "node_modules"
  ]
}